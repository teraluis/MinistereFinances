{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ca</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ca.id }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{% if ca.annee %}{{ ca.annee|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modification</th>
                <td>{% if ca.modification %}{{ ca.modification|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('CA_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('CA_edit', { 'id': ca.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
